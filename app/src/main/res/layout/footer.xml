<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="footer_sample"
            android:textColor="@color/dialogplus_black_overlay"
            android:textSize="12sp"/>

    <Button
            android:id="@+id/footer_close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="footer_button_close"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:background="@drawable/black_rounded_bg"/>

    <Button
            android:id="@+id/footer_confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="footer_button_confirm"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:background="@drawable/black_rounded_bg"/>

</LinearLayout>

